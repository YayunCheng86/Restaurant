{{!-- search bar --}}
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<form action="/restaurants/new" class="row d-flex mx-auto justify-content-end col-12">
    <button type="submit" class="btn btn-danger create-btn col-1 mr-5">Create</button>
</form>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                
                {{#if noResult}}
                    <div class="no-result">
                        {{noResult}}
                    </div>    
                {{/if}}

                {{#each restaurants}}
                    <a href="/restaurants/{{ this._id }}" class="text-secondary">
                        <div class="card mb-3">
                            <img class="card-img-top" src={{ this.image }} style="object-fit: contain;">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">{{ this.name }}</h6>

                                <div class="restaurant-category mb-1">
                                    <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                                </div>

                                <span class="badge badge-pill badge-danger font-weight-normal">
                                    {{ this.rating }}
                                    <i class="fas fa-star fa-xs"></i>
                                </span>

                                <div class='user-action'>
                                    <a href="/restaurants/{{this._id}}">detail</a>
                                    <a href="/restaurants/{{this._id}}/edit">edit</a>
                                    <form action="/restaurants/{{{this._id}}}/delete" method="POST" style="display: inline;"
                                    onsubmit="let r = confirm('Are you sure to delete this restaurant?');if (r === true) return true; else return false;">
                                        <button type="submit" class="btn btn-light">delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>